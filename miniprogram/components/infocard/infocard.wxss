.rentInfo-container{
  width: 100vw;
  height: 400rpx;
  margin-top: 15rpx;
  background-color: white;
}
.topbox{
  height: 100rpx;
  width: 100vw;
  display: flex;
  justify-content: space-between;
}
.userBox{
  display: flex;
  justify-content: center;
  width: 50%;
  height: 100rpx;
  /* background-color: rgb(223, 187, 208); */
}
.userInfo-box{
  display: flex;
  width: 100%;
  padding: 0 20rpx;
}

.userAvatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  /* background-color: rgb(146, 138, 216); */
}
.nickName-box{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 150rpx;
  margin-left: 20rpx;
}
.nickname{
  overflow: hidden;
  font-weight: bold;
  font-size: 26rpx;
  color: rgb(124, 122, 122);
}
.updateTime{
  font-size: 24rpx;
  color: rgb(173, 173, 173);
}
.charge-container{
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
  /* background-color: rgb(111, 152, 212); */
}
.charge-box{
  /* background-color: #ccc; */
  padding: 10rpx;
  font-size: 24rpx;
  border: 1rpx solid rgb(136, 130, 130);
  border-radius: 30rpx;
}
/* 中间盒子 */
.midbox{
  height: 250rpx;
  /* display: flex; */
  /* background-color: rgb(221, 233, 117); */
}
.title-container{
  height: 70rpx;
  padding: 10rpx 20rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  font-weight: 549;
  line-height: 40rpx;
}
.tag{
  padding: 8rpx 10rpx 8rpx 10rpx;
  border-radius: 10rpx;
  box-sizing: content-box;
  line-height: 20rpx;
  background-color: rgb(98, 182, 176);
}
.imgbox{
  padding: 10rpx 20rpx;
}
.img{
  width: 150rpx; 
  height: 150rpx;
  margin-right: 20rpx;
}
/* 下面的盒子 */
.bottombox{
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 22rpx;
  /* background-color: rgb(240, 194, 95); */
}
