page{
  width: 100vw;
  height: 100vh;
  width: 100vw;
  position: relative;
}
.header{
  position: fixed;
  font-size: 26rpx;
  color: #393e46;
  /* background-image: linear-gradient(to bottom, #dff4f3 0%, #fef0ff 100%); */
  background-color: #eeeeee;
  box-shadow: 2rpx 4rpx 20rpx #a19b9b;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 99;
}
.search-container {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.input-box{
  width: 75vw;
  display: flex;
  padding: 4rpx;
  align-items: center;
  border: 1rpx solid #00adb5;
  border-radius: 48rpx;
}
.input-box input{
  flex: 8;
}
.input-box icon{
  flex: 1;
  text-align: center;
}
.input-clear{
  flex: 1;
  text-align: center;
  color: rgb(81, 109, 116);
  transform: rotate(-135deg);
}
.filter-box{
  display: flex;
  position: relative;
  width: 100vw;
  height: 60rpx;
  font-size: 26rpx;
  align-items: center;
}
.filter-item{
  flex: 1;
  display: flex;
  justify-content: space-evenly;
  color: #979c9c;
  border-right: 1rpx solid #979c9c;
}
.pulldown-container{
  position: absolute;
  width: 100vw;
  top: 68rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #eeeeee;
  z-index: 99;
}
.region-container{
  width: 100%;
  display: flex;
  border-radius: 20rpx;
}
.left-box{
  flex: 1;
  border-right: 1rpx solid #c0bfbf;
}
.right-box{
  flex: 1;
  padding-left: 20rpx;
}
.left-item, .right-item{
  line-height: 50rpx;
  border-bottom: 1rpx solid #c9c7c7;
}
.rent-container {
  width: 100vw;
  border-radius: 20rpx;
  background-color: #97d9e1;
}
/* .rent-box{


} */
.rent-container text{
  display: block;
  margin: 0 0 30rpx 30rpx;
}
.rent-container slider{
  width: 92vw;
}
.confirm-btn{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  left: calc(50% - 100rpx);
  color: #d7fbe8;
  background-color: #1fab89;
  border-radius: 20rpx;
}

.select-btn{
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.sort-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
}
.sort-container view {
  width: 95%;
  line-height: 50rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #9e9e9e;
}
.sort-container view:last-child{
  border: none;
}
.pulldown-hidden{
  display: none;
  /* visibility: hidden; */
}


.pulldown-icon{
  font-size: 20rpx;
  transform: rotate(-45deg);
}
.list-view {
  position: absolute;
  margin-top: 114rpx;
  height: calc(100vh - 114rpx);
  width: 100vw;
}
.mask{
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-color: rgba(57, 58, 58, 0.6);
  bottom: 0;
  left: 0;
  z-index: 10;
}
.mask-hidden{
  position: static;
  width: 0;
}
.range-slider-block {
  border-radius: 50%;
  width: 100%;
  height: 100%;
  background-color: white;
  box-shadow: 0px 0px 5px #888;
}

