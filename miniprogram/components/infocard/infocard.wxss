.rentInfo-container{
  width: 100vw;
  margin-top: 15rpx;
  padding: 20rpx 20rpx 10rpx 20rpx;
  background-color: white;
  box-sizing: border-box;
  font-size: 26rpx;
}
.topbox{
  display: flex;
  justify-content: space-between;
}
.userInfo-box{
  display: flex;
}
.userAvatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.nickName-box{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 150rpx;
  margin-left: 14rpx;
}
.nickname{
  overflow: hidden;
  font-weight: bold;
  color: rgb(124, 122, 122);
}
.updateTime{
  font-size: 24rpx;
  color: rgb(173, 173, 173);
}
.charge-container{
  display: flex;
  justify-content: center;
  align-items: center;
}
.charge-box{
  padding: 10rpx;
  font-size: 24rpx;
  border: 1rpx solid rgb(136, 130, 130);
  border-radius: 30rpx;
}
.title-box{
  margin: 10rpx 0;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.tag{
  padding: 8rpx 10rpx 8rpx 10rpx;
  border-radius: 10rpx;
  box-sizing: content-box;
  line-height: 20rpx;
  background-color: rgb(98, 182, 176);
}
.img{
  width: 150rpx; 
  height: 150rpx;
  margin-right: 20rpx;
}
/* 下面的盒子 */
.bottombox{
  max-height: 40rpx;
  display: flex;
  line-height: 40rpx;
  font-size: 22rpx;
}
.position{
  flex: 2;
  display: flex;
  color: #42be9e;
}
.position view:first-child{
  display: flex;
  align-items: center;
}
.position view:last-child{
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.position image{
  width: 30rpx;
  height: 30rpx;
}

.addressName{
  flex: 3;
  text-align: right;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
