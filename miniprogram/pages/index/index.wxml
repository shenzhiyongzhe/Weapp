<!-- 搜索框 -->

<!-- 辅助元素，用于点击取消下拉菜单的显示 -->
<view class="{{isPulldownDot ? '.mask': '.mask-hidden'}}" catchtap="pulldownTap"></view>
<!-- 房租信息卡片展示 -->
<scroll-view class="list-view" scroll-y="true" 	type="list">
  <view class="rentInfo-container" wx:for="{{list}}" wx:key="_id">
  <!-- 上面用户的盒子 -->
    <view class="topbox">
      <view class="userBox">
        <view class="userInfo-box">
            <image src="{{item.userinfo.avatar}}" class="userAvatar"></image>
            <view class="nickName-box">
              <view class="nickname">{{item.userinfo.nickname}}</view>
              <view class="updateTime">3小时前发布</view>
            </view>      
        </view>
      </view>
      <view class="charge-container"><view class="charge-box">租金：{{item.rent}}</view></view>
    </view>
    <!-- 中间的盒子 -->
    <view class="midbox">
      <view class="title-container">
        <!-- <text class="tag">整租ww</text> -->
        {{item.title}}{{item.description}}</view>
      <view class="imgbox">
        <block wx:for="{{item.list}}" wx:for-item="url" wx:key="index">
          <image class="img" src="{{url}}" mode="aspectFill"/>
        </block>
      </view>
    </view>
    <!-- 下面详细地址的盒子 -->
    <view class="bottombox">
      <view class="addressName">{{item.location.address}}</view>
      <view class="position">{{item.location.name}}</view>
    </view>
  </view>
</scroll-view>
