<view class="radio-box">
  <view class="lable">{{lable}}</view>
  <view class="group">
    <view class="{{isActive[index] == true ? 'item active' : 'item'}}"
      wx:for="{{list}}" wx:key="index" 
      catchtap="onChange" 
      data-index="{{index}}" data-item="{{item}}"
    >
      {{item}}
    </view>
  </view>
</view>
