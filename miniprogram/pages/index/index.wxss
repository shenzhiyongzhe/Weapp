page{
  width: 100vw;
  height: 100vh;
  width: 100vw;
  position: relative;
}
.header{
  position: fixed;
  font-size: 26rpx;
  color: #393e46;
  background-color: #f7f7f7;
  box-shadow: 2rpx 4rpx 14rpx #a7a4a4;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 99;
}
.filter-box{
  display: flex;
  position: relative;
  width: 100vw;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  align-items: center;
  background-color: white;
}
.filter-item{
  flex: 1;
  display: flex;
  justify-content: space-evenly;
  color: #979c9c;
  border-right: 1rpx solid #979c9c;
}
.pulldown-container{
  position: absolute;
  width: 100vw;
  top: 50rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f7f8fa;
  z-index: 99;
}
.region-container{
  width: 100%;
  display: flex;
  border-radius: 20rpx;
}
.left-box{
  flex: 1;
  border-right: 1rpx solid #c0bfbf;
}
.right-box{
  flex: 1;
  padding-left: 20rpx;
}
.left-item, .right-item{
  line-height: 50rpx;
  border-bottom: 1rpx solid #c9c7c7;
}
.rent-container {
  width: 100%;
  border-radius: 20rpx;
}

.section-title{
  display: block;
  margin: 20rpx 0 30rpx 30rpx;
}

.confirm-btn{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  left: calc(50% - 100rpx);
  color: #d7fbe8;
  margin: 40rpx 0 30rpx 0;
  background-color: #1fab89;
  border-radius: 20rpx;
}
.sort-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
}
.sort-container view {
  width: 95%;
  line-height: 50rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #9e9e9e;
}
.sort-container view:last-child{
  border: none;
}
.pulldown-hidden{
  display: none;
  /* visibility: hidden; */
}


.pulldown-icon{
  font-size: 20rpx;
  transform: rotate(-45deg);
}
.list-view {
  position: absolute;
  margin-top: 145rpx;
  height: calc(100vh - 145rpx);
  width: 100vw;
}
.mask{
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-color: rgba(57, 58, 58, 0.6);
  bottom: 0;
  left: 0;
  z-index: 10;
}
.mask-hidden{
  position: static;
  width: 0;
}
.empty-box{
  position: absolute;
  top: 100rpx;
  left: 200rpx;
}

.test-btn{
  position: absolute;
  bottom: 100rpx;
}


