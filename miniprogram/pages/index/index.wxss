page{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.header{
  position: fixed;
  font-size: 26rpx;
  /* background-image: linear-gradient(to top, #83ccd2 0%, #97d9e1 100%); */

  background-image: linear-gradient(to top, #65d8e0 0%, #97d9e1 100%);
  box-shadow: 2rpx 4rpx 20rpx #0f9292;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 99;
}
.search-container {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.input-box{
  width: 75vw;
  display: flex;
  padding: 4rpx;
  align-items: center;
  border: 1rpx solid #33CCCC;
  border-radius: 48rpx;
}
.input-box input{
  flex: 8;
}
.input-box icon{
  flex: 1;
  text-align: center;
}
.input-clear{
  flex: 1;
  text-align: center;
  color: rgb(81, 109, 116);
  transform: rotate(-135deg);
}
.filter-box{
  display: flex;
  position: relative;
  width: 100vw;
  height: 60rpx;
  font-size: 26rpx;
  align-items: center;
}
.filter-item{
  flex: 1;
  display: flex;
  justify-content: space-evenly;
  color: #0d7377;
  border-right: 1rpx solid rgb(38, 180, 236);
}
.pulldown-container{
  position: absolute;
  width: 100vw;
  top: 68rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color: #036969;
  background-color: #97d9e1;
  z-index: 99;
}
.region-container{
  width: 100%;
  display: flex;
  border-radius: 20rpx;
}
.left-box{
  flex: 1;
  border-right: 1rpx solid #036969;
}
.right-box{
  flex: 1;
  padding-left: 20rpx;
}
.left-item, .right-item{
  line-height: 50rpx;
  border-bottom: 1rpx solid rgb(74, 105, 109);
}
.rent-container {
  width: 100vw;
  border-radius: 20rpx;
  background-color: #97d9e1;
}
.rent-box{


}
.rent-container text{
  display: block;
  margin: 0 0 30rpx 30rpx;
}
.rent-container slider{
  width: 92vw;
}
.confirm-btn{
  /* position: absolute; */
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  left: calc(50% - 100rpx);
  background-color: #309eaa;
  border-radius: 20rpx;
}
.select-container {
  width: 100%;
}
.radio-item{
  width: 90%;
  margin: 0 auto;
}
.select-lable{
  /* margin: 40rpx 0 20rpx 50rpx; */
}


.select-group{
  display: flex;
  justify-content: space-between;
}
.radio-item label{
  position: relative;
  padding: 6rpx 10rpx;
  border-radius: 30rpx;
  background-color: #EFF7F6;
}

.wx-radio-input, .wx-checkbox-input{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 50%;
  border: none;
  opacity: 0;
}

.wx-radio-input-checked::before, .wx-checkbox-input-:checked{
  width: 0;
  height: 0;
  display: none;
}
.radio-item .limit-sex-active{
  background-color: #2EC4B6;
}


.select-btn{
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.sort-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 20rpx;
}
.sort-container view {
  width: 90%;
  line-height: 50rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid rgb(74, 105, 109);
}
.sort-container view:last-child{
  border: none;
}
.pulldown-hidden{
  display: none;
  /* visibility: hidden; */
}


.pulldown-icon{
  font-size: 20rpx;
  transform: rotate(-45deg);
}
.list-view {
  position: absolute;
  margin-top: 170rpx;
  height: calc(100vh - 170rpx);
  width: 100vw;
}
.mask{
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-color: rgba(57, 58, 58, 0.6);
  bottom: 0;
  left: 0;
  z-index: 10;
}
.mask-hidden{
  position: static;
  width: 0;
}
.range-slider-block {
  border-radius: 50%;
  width: 100%;
  height: 100%;
  background-color: white;
  box-shadow: 0px 0px 5px #888;
}

